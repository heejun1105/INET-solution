version: '3.8'

services:
  # MySQL 데이터베이스
  db:
    image: mysql:8.0
    container_name: inet-db
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD:-root_password_변경_필요}
      MYSQL_DATABASE: inet
      MYSQL_USER: ${MYSQL_USER:-inet_user}
      MYSQL_PASSWORD: ${MYSQL_PASSWORD:-db_password_변경_필요}
      TZ: Asia/Seoul
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ./src/main/resources/db/migration:/docker-entrypoint-initdb.d
    command: --character-set-server=utf8mb4 --collation-server=utf8mb4_unicode_ci
    networks:
      - inet-network
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-p${MYSQL_ROOT_PASSWORD}"]
      interval: 10s
      timeout: 5s
      retries: 5

  # INET 애플리케이션
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: inet-app
    restart: unless-stopped
    ports:
      - "8082:8082"
    environment:
      # Spring 프로파일
      SPRING_PROFILES_ACTIVE: prod
      
      # 데이터베이스 연결 정보 (db 서비스와 연결)
      SPRING_DATASOURCE_URL: jdbc:mysql://db:3306/inet?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8&allowPublicKeyRetrieval=true&useUnicode=true
      SPRING_DATASOURCE_USERNAME: ${MYSQL_USER:-inet_user}
      SPRING_DATASOURCE_PASSWORD: ${MYSQL_PASSWORD:-db_password_변경_필요}
      
      # 서버 포트
      SERVER_PORT: 8082
      
      # 관리자 계정 (선택사항 - 운영에서는 반드시 변경 권장!)
      # ADMIN_USERNAME: admin
      # ADMIN_PASSWORD: admin123!
    depends_on:
      db:
        condition: service_healthy
    networks:
      - inet-network
    volumes:
      - ./logs:/app/logs
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8082/actuator/health"]
      interval: 30s
      timeout: 3s
      start_period: 40s
      retries: 3

volumes:
  mysql_data:
    driver: local

networks:
  inet-network:
    driver: bridge

